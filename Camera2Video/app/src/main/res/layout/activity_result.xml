<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <FrameLayout
        android:id="@+id/result2K"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result8K"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image2K"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/translate2K"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:layout_gravity="bottom|center_horizontal"
            tools:text="@string/translate_2k"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/result2K"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/result8K"
        android:layout_height="match_parent"
        android:layout_width="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image8K"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/translate8K"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"
            android:layout_gravity="bottom|center_horizontal"
            tools:text="@string/translate_4k"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/btnBack"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>